# EditorConfig for asus-b550-config
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
max_line_length = 100

# C source files
[*.c]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 120

# PKGBUILD
[PKGBUILD]
indent_style = space
indent_size = 2

# Configuration files
[*.conf]
indent_style = space
indent_size = 2

# Systemd unit files
[*.service]
[*.timer]
indent_style = space
indent_size = 2

# Udev rules
[*.rules]
indent_style = space
indent_size = 2

# Makefiles (tabs required)
[Makefile]
indent_style = tab
indent_size = 4
